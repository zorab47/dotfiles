[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	st = status -s
	s = status -s
	c = commit -v
	co = checkout
	br = branch -v
	b = branch -v
	d = diff
	l = log --pretty=oneline -n 20 --graph --abbrev-commit
	rc = rebase --continue
	rs = rebase --skip
	rn = rebase next

	# Remove branches that have already been merged with master
	# a.k.a. ‘delete merged’
	dm = "!git branch --merged | grep -v '\\*\\|next\\|master' | xargs --no-run-if-empty --max-args=1 git branch --delete"

	# List contributors with number of commits
	contributors = shortlog --summary --numbered

	# http://jerodsanto.net/2014/09/git-a-list-of-commits-on-one-branch-but-not-the-other
	contrast = log --left-right --graph --cherry-pick --oneline
[color]
  status = true
  diff = auto
  ui = true
[diff]
  renamelimit = 0
	renames = copies
[help]
	autocorrect = 1
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
[init]
  templatedir = ~/.git_template
[push]
  default = simple
