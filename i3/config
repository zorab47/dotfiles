# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status | ~/.i3/i3status-custom.py
        position top
        colors {
              # Solarized
              # background #073642
              # statusline #eee8d5
              # focused_workspace #cb4b16 #cb4b16 #eee8d5
              # active_workspace #cb4b16 #cb4b16 #eee8d5
              # inactive_workspace #b58900 #b58900 #eee8d5

              background $black
              statusline $red

              #                  border    background text
              focused_workspace  $blue     $blue      $br_white
              active_workspace   #cb4b16   #cb4b16    #eee8d5
              inactive_workspace $dk_black $black     $br_black
        }
}

